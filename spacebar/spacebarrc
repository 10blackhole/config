!/usr/bin/env sh

spacebar -m config display main
spacebar -m config position top 
spacebar -m config height 26
spacebar -m config title off
spacebar -m config spaces on
spacebar -m config space_icon_strip 1 2 3 4 5 6 7 8
spacebar -m config spaces_for_all_displays on
spacebar -m config space_icon_color red
spacebar -m config display_separator on
spacebar -m config display_separator_icon |
spacebar -m config display_separator_icon_color white
spacebar -m config clock on
spacebar -m config clock_icon Ôôè
spacebar -m config power on
spacebar -m config clock_format      "%A, %B %-d, %Y %R %Z"
spacebar -m config dnd on
spacebar -m config status_bar_text_font         "Hack Nerd Font:Bold:12.0"
spacebar -m config status_bar_icon_font         "Hack Nerd Font:Regular:12.0"
/*spacebar -m config clock_format       "%d/%m/%y %R"*/


spacebar -m config power_icon_strip            '| ?' '| ?'
spacebar -m config clock_icon                  '| '

